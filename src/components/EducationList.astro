---
import { type IEducationListProps, type IEducationProps } from "@types";

const { educations } = Astro.props as IEducationListProps;
---

<div class="flex flex-col">
    {
        educations.map((education: IEducationProps) => {
            return (
                <div class="flex flex-col">
                    <div class="flex flex-row justify-between items-center flex-wrap">
                        <a href={education.siteUrl}>
                            <h3 class="mr-6 hover:text-neon-teal cursor-pointer transition-all duration-150">
                                {education.institution}
                            </h3>
                        </a>
                        <p class="whitespace-pre text-slate-400 pt-0.5 sm:w-auto w-100">
                            {education.startYear} - {education.endYear}
                        </p>
                    </div>
                    <p class="text-neon-teal pt-0.5">{education.location}</p>
                    <p class="text-slate-400 pt-0.5">{education.degree}</p>
                </div>
            );
        })
    }
</div>
